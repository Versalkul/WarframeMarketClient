<UserControl x:Class="WarframeMarketClient.GUI.Tabs.Chat_Msg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarframeMarketClient.GUI.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Time" HorizontalAlignment="Left" Text="00:00" VerticalAlignment="Top" FontSize="7" Foreground="#999" Margin="0,0,0,-2"/>
        <TextBlock x:Name="Message" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Blabla" VerticalAlignment="Top" Grid.Row="1"/>

    </Grid>
</UserControl>
