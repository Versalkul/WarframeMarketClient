<UserControl x:Class="WarframeMarketClient.GUI.Tabs.Tab_Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarframeMarketClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>


        <CheckBox x:Name="autostartBox" Content="Autostart" Margin="10,16,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <CheckBox x:Name="minimizeBox" Content="Minimize to Tray" HorizontalAlignment="Left" Margin="8,46,0,0" VerticalAlignment="Top" Click="minimizeBox_Click"/>


        <TextBox x:Name="tokenBox" Text="Enter Session Token" VerticalAlignment="Bottom" Margin="10,0,10,40"/>
        <Button x:Name="saveButton" Content="Save" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="25"/>


    </Grid>
</UserControl>
