<UserControl x:Class="WarframeMarketClient.GUI.Tabs.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarframeMarketClient.GUI.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*" MinHeight="25"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="Gray">
            <TextBlock Grid.Row="0" x:Name="textBlock" TextWrapping="Wrap" Text="TextBlock" Padding="10"/>
        </Border>

        <TextBox Grid.Row="1" x:Name="InputText" TextWrapping="Wrap" Text="TextBox" KeyDown="Input_KeyDown"  />
    </Grid>
</UserControl>
